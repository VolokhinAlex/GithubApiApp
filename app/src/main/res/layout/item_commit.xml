<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="@dimen/primary_size"
    android:layout_marginEnd="@dimen/primary_size"
    android:layout_marginBottom="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/primary_size"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/committer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/primary_size"
            android:textSize="20sp"
            tools:text="Name"/>

        <TextView
            android:id="@+id/committer_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/primary_size"
            android:textSize="20sp"
            tools:text="Email"/>

        <TextView
            android:id="@+id/commit_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/primary_size"
            android:textSize="20sp"
            tools:text="Message"/>

        <TextView
            android:id="@+id/commit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/primary_size"
            android:textSize="16sp"
            tools:text="Date"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>